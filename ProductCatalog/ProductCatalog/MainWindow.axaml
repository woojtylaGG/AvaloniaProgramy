<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ProductCatalog.MainWindow"
        Title="ProductCatalog">
    <StackPanel Margin="20" HorizontalAlignment="Center">
        <TextBlock>Wyszukaj produkt</TextBlock>
        <TextBox x:Name="InputTextBox" Width="300" />

        <Button x:Name="SubmitButton" Content="Wyszukaj" 
                Click="SubmitButton_Click" HorizontalContentAlignment="Center"
                Width="100" Margin="0,20,0,0" />
        
        <Button Name="ZmienDostepnoscButton" 
                Click="ZmienDostepnosc_Click" 
                Content="Zmień dostępność" 
                IsVisible="False"/>

        <TextBlock x:Name="ShowTextBlock" Width="300" Margin="0,20,0,0" />
        <Image x:Name="ProductImage" Width="100" Height="100" Margin="5" />

        
    </StackPanel>
</Window>