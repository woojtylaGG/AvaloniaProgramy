<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Event_Calendar.MainWindow"
        Title="Kalendarz" Width="400" Height="300">
    <StackPanel Margin="10">
        <TextBox Name="EventNameTextBox" Watermark="Nazwa wydarzenia" Margin="0,0,0,10"/>
        <ComboBox Name="DayOfWeekComboBox" Margin="0,0,0,10">
            <ComboBoxItem Content="Poniedziałek"/>
            <ComboBoxItem Content="Wtorek"/>
            <ComboBoxItem Content="Środa"/>
            <ComboBoxItem Content="Czwartek"/>
            <ComboBoxItem Content="Piątek"/>
            <ComboBoxItem Content="Sobota"/>
            <ComboBoxItem Content="Niedziela"/>
        </ComboBox>
        <CheckBox Name="ImportantCheckBox" Content="Ważne" Margin="0,0,0,10"/>
        <Button Name="AddEventButton" Content="Dodaj wydarzenie" Margin="0,0,0,10"/>
        <Button Name="UpdateWindowButton" Content="Update Window" Margin="0,0,0,10"/>
        <ListBox Name="EventsListBox" Margin="0,10,0,0"/>
    </StackPanel>
</Window>